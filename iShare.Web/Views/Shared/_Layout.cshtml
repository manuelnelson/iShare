@using iShare.Web
@using ServiceStack.MiniProfiler
<!DOCTYPE html>
<html lang="en" ng-app="TodoApp">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Enter Description Here.">
    <meta name="author" content="Emmanuel Nelson">
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    @(HttpContext.Current.IsDebuggingEnabled ? Html.RenderCssBundle("~/Content/application.css.bundle", BundleOptions.Normal) : Html.RenderCssBundle("~/Content/application.css.bundle", BundleOptions.Normal))
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar
        ================================================== -->
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="http://manuelnelson.github.com/BoilerPlateMVC" class="navbar-brand">Boilerplate</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="http://manuelnelson.github.com/BoilerPlateMVC">View on Github</a>
                    </li>
                    <li>
                        <a href="http://emmanuelnelson.com/">About</a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle">Download <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a tabindex="-1" target="_blank" href="#">An</a></li>
                            <li><a tabindex="-1" target="_blank" href="#">Angular</a></li>
                            <li class="divider"></li>
                            <li><a tabindex="-1" target="_blank" href="#">Dropdown! (No Jquery)</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="http://builtwithbootstrap.com/" target="_blank">Built With Bootstrap</a></li>
                    <li><a href="https://wrapbootstrap.com/?ref=bsw" target="_blank">WrapBootstrap</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="page-header" id="banner">
            &nbsp;
        </div>
        <div id="main-content">
            <div ng-controller="MessageCtrl" ng-show="showMessage" class="row">
                <div class="col-lg-12">
                    <div class="alert {{AlertType}}">
                        <a ng-click="close();" class="close">Ã—</a>
                        <strong>{{Title}}</strong> {{Message}}
                    </div>
                </div>
            </div>
            <div ng-view></div>
        </div>
        @RenderBody()
        <footer id="footer">
            Made by <a target="_blank" href="http://emmanuelnelson.com">Emmanuel Nelson</a>. <a href="mailto:info@emmanuelnelson.com">Contact him</a>.<br>
            Theme modified from <a target="_blank" href="http://bootswatch.com/readable">bootswatch theme</a> from <a href="http://thomaspark.me/" target="_blank">Thomas Park</a><br />
            Based on <a target="_blank" href="http://twitter.github.com/bootstrap/">Bootstrap</a>. Hosted on <a target="_blank" href="http://pages.github.com/">GitHub</a>. Icons from <a target="_blank" href="http://glyphicons.com/">Glyphicons</a>. Web fonts from <a target="_blank" href="http://www.google.com/webfonts">Google</a>.<p></p>
        </footer>
    </div>
    <div ng-controller="LoadingCtrl" id="loading" ng-show="loading"><span>{{message}}</span></div>
    @Html.Raw(Profiler.RenderIncludes().ToHtmlString())
    @(HttpContext.Current.IsDebuggingEnabled ? Html.RenderJsBundle("~/Scripts/application.js.bundle", BundleOptions.Normal) : Html.RenderJsBundle("~/Scripts/application.js.bundle", BundleOptions.Normal))
    @RenderSection("scripts", required: false)
</body>
</html>
